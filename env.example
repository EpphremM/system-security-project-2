# Database
DATABASE_URL="postgresql://user:password@localhost:5432/visitor_management?schema=public"
# Direct database URL for migrations (optional, defaults to DATABASE_URL)
DIRECT_URL="postgresql://user:password@localhost:5432/visitor_management?schema=public"
# Prisma Accelerate URL for connection pooling (optional)
PRISMA_ACCELERATE_URL="prisma://accelerate.prisma-data.net/?api_key=your-api-key"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# App
NODE_ENV="development"

# Optional: Email service (for notifications)
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@example.com"
# SMTP_PASSWORD="your-password"
# SMTP_FROM="noreply@example.com"

# Optional: WebAuthn (for passwordless authentication)
# WEBAUTHN_RP_ID="localhost"
# WEBAUTHN_RP_NAME="Visitor Management System"
# WEBAUTHN_ORIGIN="http://localhost:3000"

# CAPTCHA (hCaptcha)
NEXT_PUBLIC_HCAPTCHA_SITE_KEY="your-hcaptcha-site-key"
HCAPTCHA_SECRET_KEY="your-hcaptcha-secret-key"

# Cleanup Job
CLEANUP_API_KEY="your-cleanup-api-key-change-in-production"

# Password Security
PASSWORD_PEPPER="your-server-side-pepper-change-in-production"
ENCRYPTION_KEY="your-encryption-key-for-password-transmission-32-bytes-hex"

